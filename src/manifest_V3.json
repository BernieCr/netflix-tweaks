{
  "name": "Netflix Tweaks",
  "description": "A browser extension for a couple of Netflix tweaks",
  "version": "0.4",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ]
}
